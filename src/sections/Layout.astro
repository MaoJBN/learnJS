---
const { title } = Astro.props;
const items =[
	{
		icon:"",
		name:"producto 1"
	},
	{
		icon:"",
		name:"producto 2"
	},
	{
		icon:"",
		name:"producto 3"
	}
]
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="header">
			<div class="container header_info">
				Contenido de la cabecera
			</div>
		</div>
		<div class="container banner">
			Banner
		</div>
		<nav class="container main_menu">
			<a href="/">Inicio</a><a href="./categorias">Productos</a><a href="/">Ofertas</a>	
		</nav>
		<div class="container categories">
			categorias
		</div>
		<div class=" container items">
			<h1>Ofertas</h1>
			<div class="container_items">
				{
					items.map((item=><div class="sale_items">
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><ellipse cx="12.07" cy="7" rx="3" ry="1.71"></ellipse><path d="M12.07 22c4.48 0 8-2.2 8-5V7c0-2.8-3.52-5-8-5s-8 2.2-8 5v10c0 2.8 3.51 5 8 5zm0-18c3.53 0 6 1.58 6 3a2 2 0 0 1-.29.87c-.68 1-2.53 2-5 2.12h-1.39C8.88 9.83 7 8.89 6.35 7.84a2.16 2.16 0 0 1-.28-.76V7c0-1.42 2.46-3 6-3z"></path></svg>
						Name item
				</div>))
				}
				
			</div>
		</div>
		<div class="container"> <slot /></div>
		<div class="container footer">
			footer
		</div>
		<div class="font-medium">
			HOLA
		</div>
	</body>
</html>
<style is:global>
	.container_items{
		display: 	flex;
		height: 80px;
		margin-top: 4px;
	}
	.sale_items{
		height: 100%;
		background-color: bisque;
		max-width: 120px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		border: 1px solid gray;
		border-radius: 6px;
		margin-right: 3px;
	}
	.main_menu{
		height: 40px;
		display: flex;
		background-color: #EE4D2D;

	}
	.main_menu a{		
		align-items: center;
		height: 100%;
		display: flex;
		padding: 0 12px;
		text-decoration: none;
		color: white;		
		transition: background 300ms ease-in-out;
	}
	.main_menu a:hover{
		background-color: #be452d;
	}
	.footer{
		background-color: brown;
	}
	.items{
		background: rgb(0, 174, 255);
		color: black;
		height: 180px;
	}
	.categories{
		background: red;
		height: 80px;
	}
	.banner{
		height: 240px;
		background-color: gray;
	}
	.header{
		background-color: black;
	}
	.header_info{
		height: 80px;
		background: rgb(51, 49, 49);
	}
	.container{
		max-width:1280px;
		
		margin: 0 auto;
		color: rgb(196, 155, 155);
	}
	html,body {
		margin: 0;
		font-family: system-ui, sans-serif;
		padding: 0;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
